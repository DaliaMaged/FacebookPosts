<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myStoryContainer"
    android:layout_width="150dp"
    android:layout_height="170dp"
    android:background="@drawable/p2">
<TextView
    android:id="@+id/owner_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
   app:layout_constraintStart_toEndOf="@id/owner_img"
    app:layout_constraintBottom_toBottomOf="@id/owner_img"
    android:text="@string/dalia_maged"
    style="@style/text_story_owner"



    />
    <ImageView
        android:id="@+id/owner_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/p2" />
</androidx.constraintlayout.widget.ConstraintLayout>